<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" lang="es-es" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ingreso a Producto Terminado</title>
    <meta name="description" content="Web Page for PT" />
    <meta http-equiv="author" content="Laureano Gabriel Sánchez Aguilar">
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="icon" type="image/icon" href="~/favicon.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header-nav">
        <div class="nav-list">
            <ul>
                <li><a class="nav-link" href="http://intranet/gv/DefaultPage.aspx">Regresar</a></li>
                <li>@Html.ActionLink("Ingresos", "entrega", "ProductoTerminado", null, new { @class = "nav-link" })</li>
                <li>@Html.ActionLink("Historial", "historial", "ProductoTerminado", null, new { @class= "nav-link" })</li>
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="modal-footer">
            <div class="text-center">
                <p>@DateTime.Now.Year - Grupo Vargas S.A.</p>
                <p><em>Versión 2.0</em></p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" src="~/Scripts/datepicker-es.js"></script>
    <script type="text/javascript" src="~/Scripts/entrega.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
